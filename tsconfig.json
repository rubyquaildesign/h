{
    "compilerOptions": {
        "module": "UMD",
        "outDir": "./dist",
        "target": "ES2018",
        "jsx": "react",
        "importHelpers": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["ESNext", "ES2019", "DOM"],
        "declaration": true,
        "declarationDir": "types"
    },
    "typeAcquisition": { "enable": true },
    "include": ["src"]
}
